        xmlns:local="clr-namespace:Task6_7_"
        mc:Ignorable="d"
        Title="Изменение данных покупателя" Height="368" Width="537">
    <Grid Margin="0,0,0,-5">
        <Label FontSize="20" Content="Введите ID покупателя" HorizontalAlignment="Left" Height="47" Margin="57,36,0,0" VerticalAlignment="Top" Width="229"/>
        <Label FontSize="20 " Content="Введите фамилию" HorizontalAlignment="Left" Height="47" Margin="57,74,0,0" VerticalAlignment="Top" Width="229"/>
        <Label FontSize="20 " Content="Введите адрес" HorizontalAlignment="Left" Height="38" Margin="57,112,0,0" VerticalAlignment="Top" Width="229"/>
        <Label FontSize="20 " Content="Введите баланс" HorizontalAlignment="Left" Height="38" Margin="57,150,0,0" VerticalAlignment="Top" Width="229"/>
        <Label FontSize="20 " Content="Введите номер тел" HorizontalAlignment="Left" Height="41" Margin="57,188,0,0" VerticalAlignment="Top" Width="229"/>
        <TextBox x:Name="TextBoxId" HorizontalAlignment="Left" Height="23" Margin="280,52,0,0" FontSize="15" Text="&#xA;" TextWrapping="NoWrap" VerticalAlignment="Top" Width="180"/>
        <TextBox x:Name="TextBoxFam" HorizontalAlignment="Left" Height="23" Margin="280,88,0,0" FontSize="15" Text="&#xA;" TextWrapping="NoWrap" VerticalAlignment="Top" Width="180"/>
        <TextBox x:Name="TextBoxAddress" HorizontalAlignment="Left" Height="23" Margin="280,126,0,0" FontSize="15" Text="&#xA;" TextWrapping="NoWrap" VerticalAlignment="Top" Width="180"/>
        <TextBox x:Name="TextBoxBalance" HorizontalAlignment="Left" Height="23" Margin="280,161,0,0" FontSize="15" Text="&#xA;" TextWrapping="NoWrap" VerticalAlignment="Top" Width="180"/>
        <TextBox x:Name="TextBoxNumber" HorizontalAlignment="Left" Height="23" FontSize="15" Text="&#xA;" TextWrapping="NoWrap" VerticalAlignment="Top" Width="180" Margin="280,193,0,0"/>
        <Button FontSize="15" Content="Применить" HorizontalAlignment="Left" Height="28" Margin="159,257,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click"/>
        <Button FontSize="15" Content="Отменить" HorizontalAlignment="Left" Height="28" Margin="299,257,0,0" VerticalAlignment="Top" Width="114" Click="Button_Click_1"/>

    </Grid>
</Window>
